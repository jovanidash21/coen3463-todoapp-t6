doctype html
html
    head
        title= title
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', type='text/css', href='/stylesheets/font-awesome.min.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/login.css')
        link(rel='stylesheet', type='text/css', href='/stylesheets/custom.css')
    body.login-page
        .container
            .card
            .card
                h1.title Login
                form
                    .input-container
                        input(type='#{type}', id='username', required='required')
                        label(for='username') Username
                        .bar
                    .input-container
                        input(type='#{type}', id='password', required='required')
                        label(for='password') Password
                        .bar
                    .button-container
                        button
                            span Go
                    .footer
                        a(href='#') Forgot your password?
            .card.alt
                .toggle
                h1.title
                    | Register
                    .close
                form
                    .input-container
                        input(type='#{type}', id='newUsername', required='required')
                        label(for='newUsername') Username
                        .bar
                    .input-container
                        input(type='#{type}', id='newPassword', required='required')
                        label(for='newPassword') Password
                        .bar
                    .input-container
                        input(type='#{type}', id='confirmPassword', required='required')
                        label(for='confirmPassword') Confirm Password
                        .bar
                    .button-container
                        button
                            span Next
        script(type='text/javascript', src='/javascripts/jquery.min.js')
        script(type='text/javascript', src='/javascripts/login.js')
